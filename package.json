{
	"name": "autographa",
	"productName": "autographa-editor",
	"description": "A Bible translation editor for everyone.",
	"email": "autographa.support@bridgeconn.com",
	"author": "Friends of Agape <autographa.support@bridgeconn.com>",
	"version": "2.0.2",
	"license": "MIT",
	"private": true,
	"main": "main/index.js",
	"homepage": "./",
	"repository": {
		"type": "git",
		"url": "https://github.com/friendsofagape/autographa"
	},
	"scripts": {
		"clean": "rimraf dist renderer/.next renderer/out",
		"start": "electron .",
		"dev": "next dev",
		"prod": "npm run build && next start",
		"test": "jest",
		"e2e": "npx playwright test",
		"lint": "eslint ./renderer/src",
		"lint:fix": "eslint ./renderer/src --fix",
		"maxmemory-allocation": "NODE_OPTIONS=--max_old_space_size=4096",
		"eslint:github-action": "node ./node_modules/eslint/bin/eslint . --ignore-path .gitignore --max-warnings 0",
		"build": "next build renderer && next export renderer",
		"pack-app": "npm run build && electron-builder --dir",
		"dist": "npm run build && electron-builder -p never",
		"deploy": "npm run build && electron-builder -p always"
	},
	"eslintIgnore": [
		"*.test.js"
	],
	"build": {
		"asar": true,
		"extraResources": "renderer/public",
		"files": [
			"main",
			"renderer/out",
			"public",
			"renderer/public/**/*",
			"build/**/*",
			"main",
			"postcss.config.js",
			"renderer/jsconfig.json",
			"styles/**/*"
		],
		"linux": {
			"target": [
				"deb"
			]
		},
		"mac": {
			"category": "public.app-category.Utilities",
			"target": "dmg",
			"icon": "styles/autographa_logo.ico",
			"type": "distribution"
		},
		"win": {
			"target": "nsis",
			"icon": "styles/autographa_icon.png",
			"publish": [
				"github"
			]
		},
		"nsis": {
			"allowToChangeInstallationDirectory": true,
			"oneClick": false
		},
		"publish": [
			{
				"provider": "github",
				"owner": "vipinpaul",
				"repo": "autographa"
			}
		]
	},
	"devDependencies": {
		"@babel/preset-env": "^7.14.2",
		"@babel/preset-react": "^7.13.13",
		"@netlify/plugin-nextjs": "^3.9.0",
		"@playwright/test": "^1.16.3",
		"@svgr/webpack": "^5.5.0",
		"@testing-library/dom": "^7.25.0",
		"@testing-library/jest-dom": "^5.11.4",
		"@testing-library/react": "^11.0.4",
		"@testing-library/user-event": "12.1.7",
		"ajv": "^6.12.2",
		"autoprefixer": "^10.2.6",
		"babel-eslint": "^10.1.0",
		"babel-jest": "^26.6.3",
		"babel-plugin-istanbul": "^6.0.0",
		"babel-plugin-react-intl": "^3.0.1",
		"buffer-loader": "^0.1.0",
		"canvas": "^2.8.0",
		"electron": "12.1.0",
		"electron-builder": "^22.9.1",
		"enzyme": "^3.11.0",
		"enzyme-adapter-react-16": "^1.15.6",
		"eslint": "^7.11.0",
		"eslint-config-airbnb": "^18.2.0",
		"eslint-config-next": "^11.0.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jsx-a11y": "^6.3.1",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-react": "^7.21.4",
		"eslint-plugin-react-hooks": "^4.1.2",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"jest": "^26.6.3",
		"jest-dom": "^4.0.0",
		"null-loader": "^4.0.1",
		"playwright": "^1.16.3",
		"postcss": "^8.3.6",
		"prettier": "^2.3.0",
		"tailwindcss": "^2.2.17"
	},
	"dependencies": {
		"@headlessui/react": "^1.4.1",
		"@heroicons/react": "^1.0.5",
		"@material-ui/core": "^4.9.12",
		"@material-ui/icons": "^4.9.1",
		"@material-ui/lab": "latest",
		"@ory/kratos-client": "^0.5.4-alpha.1",
		"@parse/react-ssr": "0.0.1-alpha.14",
		"@tailwindcss/forms": "^0.3.4",
		"@tailwindcss/typography": "^0.4.1",
		"bible-reference-rcl": "^0.2.0",
		"clsx": "1.1.1",
		"electron-is-dev": "^1.1.0",
		"electron-log": "4.2.4",
		"electron-next": "^3.1.5",
		"electron-updater": "^4.3.4",
		"eslint-import-resolver-alias": "^1.1.2",
		"font-list": "^1.3.1",
		"fs-extra": "^10.0.0",
		"get-system-fonts": "^2.0.2",
		"gitea-react-toolkit": "^1.3.5",
		"is-electron": "^2.2.0",
		"js-yaml": "^4.1.0",
		"jsonwebtoken": "^8.5.1",
		"localforage": "1.9.0",
		"markdown-translatable": "^1.0.4",
		"md5": "^2.3.0",
		"moment": "^2.29.2",
		"next": "^12.0.4",
		"next-images": "^1.8.1",
		"next-on-netlify": "^2.6.3",
		"next-optimized-images": "^2.6.2",
		"next-transpile-modules": "^8.0.0",
		"nprogress": "^0.2.0",
		"parse": "^3.3.0",
		"postcss-import": "^14.0.2",
		"postcss-nested": "^5.0.6",
		"prefs-rcl": "^0.1.8",
		"prop-types": "15.7.2",
		"raw-loader": "^4.0.2",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-intl": "^5.18.0",
		"translation-helps-rcl": "^1.5.0",
		"usfm-editor": "0.8.0",
		"usfm-grammar": "^2.0.0",
		"uuid": "^8.3.2",
		"webpack-node-externals": "^3.0.0",
		"winston": "^3.3.3",
		"ws": "^7.5.0"
	},
	"optionalDependencies": {
		"bufferutil": "^4.0.3",
		"scripture-resources-rcl": "^3.2.0",
		"utf-8-validate": "^5.0.5"
	}
}
